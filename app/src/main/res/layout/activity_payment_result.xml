<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="@color/white">

    <!-- Icon Thành công -->

    <!-- Tiêu đề Thành công -->
    <ImageView
        android:id="@+id/imgSuccess"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/successicon" />

    <TextView
        android:id="@+id/txvSuccessTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thanh toán thành công!"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="16dp" />

    <!-- Thông báo chi tiết -->

    <!-- Số tiền đã thanh toán -->
    <TextView
        android:id="@+id/txvAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Số tiền: 100,000 VNĐ"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginTop="24dp" />

    <!-- Nút "Quay lại trang chủ" -->
    <Button
        android:id="@+id/btnBackToHome"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="Quay lại trang chủ"
        android:background="@drawable/buttonui"
        android:textColor="@color/white"
        android:layout_marginTop="32dp"
        android:paddingStart="32dp"
        android:paddingEnd="32dp" />

</LinearLayout>
