<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MyAccountFragment"
    android:theme="@style/Theme.AppCompat.Light"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="@drawable/button_underline"
        app:cardBackgroundColor="@color/cyan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="401dp"
        android:layout_height="317dp"
        android:background="@color/material_dynamic_neutral90"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/cardView3"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/btnTaiKhoan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@android:drawable/editbox_background"
            android:drawableLeft="@drawable/baseline_account_circle_24"
            android:drawableRight="@drawable/baseline_arrow_forward_ios_24"
            android:drawablePadding="10dp"
            android:gravity="start"
            android:text="Tài khoản"
            android:textColor="#6D4C41" />

        <Button
            android:id="@+id/btnQuanLy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@android:drawable/editbox_background"
            android:drawableLeft="@drawable/baseline_lock_24"
            android:drawableRight="@drawable/baseline_arrow_forward_ios_24"
            android:drawablePadding="10dp"
            android:gravity="start"
            android:text="Quản lý"
            android:textColor="#6D4C41" />

        <Button
            android:id="@+id/btnDangXuat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@android:drawable/editbox_background"
            android:drawableLeft="@drawable/baseline_login_24"
            android:drawableRight="@drawable/baseline_arrow_forward_ios_24"
            android:drawablePadding="10dp"
            android:gravity="start"
            android:text="Đăng xuất"
            android:textColor="#6D4C41" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
