<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.Manage"
    android:background="@drawable/security">

    <Button
        android:id="@+id/btnback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="?attr/homeAsUpIndicator"
        android:background="@color/material_on_background_disabled" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="QUẢN LÝ"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="40dp"
        android:gravity="center"
        android:layout_marginTop="100dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp">

        <Button
            android:id="@+id/btnmanageuser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="quản lý người dùng"
            android:gravity="start"
            android:background="@color/material_dynamic_primary70"
            android:textStyle="bold"
            android:textSize="20dp"
            android:drawableRight="@drawable/baseline_arrow_forward_ios_24"/>
        <Button
            android:id="@+id/btnmanagecategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="quản lý danh mục sản phẩm"
            android:gravity="start"
            android:background="@color/material_dynamic_primary70"
            android:textStyle="bold"
            android:textSize="20dp"
            android:drawableRight="@drawable/baseline_arrow_forward_ios_24"/>

        <Button
            android:id="@+id/btnmanagetrip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="quản lý chuyến xe"
            android:gravity="start"
            android:background="@color/material_dynamic_primary70"
            android:textStyle="bold"
            android:textSize="20dp"
            android:drawableRight="@drawable/baseline_arrow_forward_ios_24"/>

        <Button
            android:id="@+id/btnmanagecoach"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="quản lý loại xe"
            android:gravity="start"
            android:background="@color/material_dynamic_primary70"
            android:textStyle="bold"
            android:textSize="20dp"
            android:drawableRight="@drawable/baseline_arrow_forward_ios_24"/>

        <Button
            android:id="@+id/btnmanageticket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="quản lý vé đặt"
            android:gravity="start"
            android:background="@color/material_dynamic_primary70"
            android:textStyle="bold"
            android:textSize="20dp"
            android:drawableRight="@drawable/baseline_arrow_forward_ios_24"/>

    </LinearLayout>

</LinearLayout>