<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Trạng thái nhấn (pressed) -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">

            <solid android:color="#3700B3"/> <!-- Màu khi nhấn -->
            <corners android:radius="50dp"/> <!-- Góc bo tròn -->

        </shape>
    </item>

    <!-- Trạng thái mặc định -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#00BFFF"
                android:endColor="#87CEFA"
                android:angle="45" />
            <corners android:radius="50dp"/> <!-- Góc bo tròn -->
            <stroke
                android:width="2dp"
                android:color="#3700B3" /> <!-- Viền cho nút -->
        </shape>
    </item>
</selector>